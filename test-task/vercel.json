{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist", 
        "cleanUrls": true
      }
    }
  ],
  "routes": [
    {
      "src": "/api/cocktail/(.*)",
      "dest": "https://www.thecocktaildb.com/api/json/v1/1/$1",
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "status": 200
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}